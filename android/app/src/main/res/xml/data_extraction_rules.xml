<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Include shared preferences -->
        <include domain="sharedpref" path="." />
        
        <!-- Include database files -->
        <include domain="database" path="." />
        
        <!-- Exclude sensitive authentication data -->
        <exclude domain="sharedpref" path="flutter.auth_tokens" />
    </cloud-backup>
    
    <device-transfer>
        <!-- Allow most data to be transferred -->
        <include domain="sharedpref" path="." />
        <include domain="database" path="." />
        <include domain="file" path="." />
        
        <!-- Exclude session tokens -->
        <exclude domain="sharedpref" path="flutter.session" />
    </device-transfer>
</data-extraction-rules>